@model NoteMarketPlace.Models.ContactUs

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<head>

    <!-- Title -->
    <title>Contact Us - Notes MarketPlace</title>

</head>

<body>

    <section id="contact-us">

        <!-- Background -->
        <div class="small-height-bg">
            <p class="text-center">Contact Us</p>
        </div>
        <!-- Background -->
        <!-- ContactUs Box -->
        <div class="general-box">
            <div class="content-box-lg">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="section-heading">Get in Touch</p>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <form method="post">
                        <div class="row">

                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label class="info-label" for="cu-fullname">Full Name *</label>
                                    @if (Session["FullName"] != null)
                                    {
                                        @Html.TextBoxFor(x => x.FullName, new { Value = @Session["FullName"].ToString(), @class = "form-control form-inbox", id = "cu-fullname", placeholder = "Enter your full name", @readonly = "readonly" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control form-inbox", id = "cu-fullname", placeholder = "Enter your full name" })
                                    }
                                    <div class="incorrect-password-label">
                                        <p>
                                            @Html.ValidationMessage("FullName", new { style = "color:red" })
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="info-label" for="cu-email">Email Address *</label>
                                    @if (Session["EmailID"] != null)
                                    {
                                        @Html.TextBoxFor(x => x.EmailID, new { Value = @Session["EmailID"], @class = "form-control form-inbox", id = "cu-email", placeholder = "Enter your email address", @readonly = "readonly" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control form-inbox", id = "cu-email", placeholder = "Enter your email address" })
                                    }
                                    <div class="incorrect-password-label">
                                        <p>
                                            @Html.ValidationMessage("EmailID", new { style = "color:red" })
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="info-label" for="cu-subject">Subject *</label>
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control form-inbox", id = "form-subject", placeholder = "Enter your subject" })
                                    <div class="incorrect-password-label">
                                        <p>
                                            @Html.ValidationMessage("Subject", new { style = "color:red" })
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label class="info-label" for="comment-questions">Comments / Questions *</label>
                                    @Html.TextAreaFor(x => x.Comments, new { @class = "form-control form-inbox", id = "comment-questions", placeholder = "Comments...", style = "resize:none;", rows = "12" })
                                    <div class="incorrect-password-label">
                                        <p>
                                            @Html.ValidationMessage("Comments", new { style = "color:red" })
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12">
                                <div class="form-btn">
                                    <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- ContactUs Box Ends -->

    </section>

</body>