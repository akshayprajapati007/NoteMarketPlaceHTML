@model NoteMarketPlace.Models.NoteType

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<head>

    <!-- Title -->
    <title>Add Type - Notes MarketPlace</title>


</head>

<body>

    <section id="add-type" class="admin-add-page">

        <!-- AddType Box -->
        <div class="general-box">
            <div class="content-box-lg">
                <div class="container">
                    <div class="row">
                        <p class="section-heading">Add Type</p>
                    </div>
                </div>

                <div class="container">
                    <div class="row">

                        <div class="success-msg">
                            @Html.Raw(@ViewBag.typeSuccess)
                        </div>

                        <form method="post">
                            <div class="row">

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">

                                    <div class="form-group">
                                        <label class="info-label" for="at-type">Type *</label>
                                        @Html.TextBoxFor(x => x.TypeName, new { @class = "form-control input-box-style", id = "at-type", placeholder = "Enter your type" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("TypeName", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="type-description">Description *</label>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control input-box-style", @id = "type-description", @placeholder = "Enter your description...", style = "resize: none;" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("Description", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="form-btn">
                                        <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- AddType Box Ends -->

    </section>

</body>