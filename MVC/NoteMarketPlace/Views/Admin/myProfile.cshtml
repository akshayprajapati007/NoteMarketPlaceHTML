@model NoteMarketPlace.Models.UserProfileData

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<head>

    <!-- Title -->
    <title>My Profile - Notes MarketPlace</title>

</head>

<body>

    <section id="my-profile" class="admin-add-page">

        <!-- MyProfile Box -->
        <div class="general-box">
            <div class="content-box-lg">
                <div class="container">
                    <div class="row">
                        <p class="section-heading">My Profile</p>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <form method="post">
                            <div class="row">

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">

                                    <div class="form-group">
                                        <label class="info-label" for="mpa-firstname">First Name *</label>
                                        @Html.TextBoxFor(x => x.FirstName, new { Value = Model.FirstName, @class = "form-control input-box-style", id = "mpa-firstname", placeholder = "Enter your first name" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("FirstName", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="mpa-lastname">Last Name *</label>
                                        @Html.TextBoxFor(x => x.LastName, new { Value = Model.LastName, @class = "form-control input-box-style", id = "mpa-lastname", placeholder = "Enter your last name" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("LastName", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="mpa-email">Email *</label>
                                        @Html.TextBoxFor(x => x.EmailID, new { Value = Model.EmailID, @class = "form-control input-box-style", id = "mpa-email", placeholder = "Enter your email address", @readonly = "true" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("EmailID", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="mpa-semail">Secondary Email</label>
                                        @Html.TextBoxFor(x => x.SecondaryEmailAddress, new { Value = Model.SecondaryEmailAddress, @class = "form-control input-box-style", id = "mpa-semail", placeholder = "Enter your email address" })
                                        <div class="incorrect-password-label">
                                            <p>
                                                @Html.ValidationMessage("SecondaryEmailAddress", new { style = "color:red" })
                                            </p>
                                        </div>
                                    </div>

                                    <div class="row no-gutters">

                                        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                                            <div class="form-group">
                                                <label class="info-label" for="mpa-ccode">Code</label>
                                                @Html.DropDownListFor(x => x.CountryCode, new SelectList(ViewBag.countryCode, "Value", "Text"), "Select Code", new { @class = "form-control input-box-style", id = "up-ccode" })
                                                <div class="select-down-arrow">
                                                    <img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10">
                                            <div class="form-group">
                                                <label class="info-label" for="mpa-pnumber">Phone Number *</label>
                                                @Html.TextBoxFor(x => x.PhoneNumber, new { Value = Model.PhoneNumber, id = "mpa-pnumber", @class = "form-control input-box-style", placeholder = "Enter your phone number" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="exampleInputEmail1">Profile Picture</label>
                                        <div id="uploadProfilePicture" class="form-control input-box-style upload-input-box" onClick="document.getElementById('mpa-picture').click()" style="cursor: pointer;">
                                            <img src="~/Content/Admin/images/user-profile/upload.png" alt="Upload Profile Picture">
                                            <p>Upload a picture</p>
                                        </div>
                                        <input type="file" style="display: none;" class="form-control" id="mpa-picture" name="mpa-picture">
                                    </div>

                                    <div class="form-btn">
                                        <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- MyProfile Box Ends -->

    </section>

</body>